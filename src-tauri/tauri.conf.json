{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sams-manifest-compiler",
  "version": "0.1.1",
  "identifier": "com.sams-manifest-compiler.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../target/wwwroot"
  },
  "app": {
    "windows": [
      {
        "title": "Sams Manifest Compiler",
        "width": 800,
        "height": 600,
        "decorations": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../resources/icon.png",
      "../resources/icon.ico"
    ]
  }
}
